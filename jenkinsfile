pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'my-flask-api'
        DOCKER_TAG = 'latest'
    }

    stages {
        stage('Clone Repository') {
            steps {
                script {
                    // Clone the repository
                    git url: 'https://github.com/SuryaTri369/My_Ci-CD', branch: 'main'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image from the local files
                    bat 'docker build -t %DOCKER_IMAGE%:%DOCKER_TAG% .'
                }
            }
        }

        stage('Run Unit Tests') {
            steps {
                script {
                    // Run unit tests inside a temporary Docker container
                    bat 'docker run --rm %DOCKER_IMAGE%:%DOCKER_TAG% python -m unittest discover -s . -p "test_app.py"'
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    // Push the Docker image to a Docker registry
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-credentials') {
                        bat "docker push %DOCKER_IMAGE%:%DOCKER_TAG%"
                    }
                }
            }
        }

        stage('Deploy to Production') {
            steps {
                script {
                    // Stop any running container with the same name and start the new container
                    bat 'docker stop my-flask-container || echo No container to stop'
                    bat 'docker rm my-flask-container || echo No container to remove'
                    bat 'docker run -d -p 5000:5000 --name my-flask-container %DOCKER_IMAGE%:%DOCKER_TAG%'
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning up...'
            bat 'docker system prune -f'
        }
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Please check the logs for details.'
        }
    }
}
